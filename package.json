{
  "name": "template-server",
  "version": "1.0.0",
  "description": "template-server",
  "main": "main.js",
  "author": "centauri-montes",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "yarn prebuild && tsc",
    "start:dev": "nodemon -L --config nodemon.json src/main.ts",
    "start:prod": "yarn build && cross-env NODE_ENV=production node dist/main.js",
    "typeorm": "node --require ts-node ./node_modules/typeorm/cli.js",
    "typeorm:generate": "yarn typeorm migration:generate -n",
    "typeorm:run": "yarn typeorm migration:run"
  },
  "_moduleAliases": {
    "@domain": "dist/domain",
    "@controller": "dist/infrastructure/controller",
    "@repository": "dist/repository",
    "@service": "dist/service",
    "@shared": "dist/shared",
    "@system": "dist/system",
    "@config": "dist/system/config/index"
  },
  "dependencies": {
    "@sentry/node": "^6.18.1",
    "@sentry/tracing": "^6.18.1",
    "bcrypt": "^5.0.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-rate-limit": "^6.3.0",
    "helmet": "^5.0.2",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "multer": "^1.4.4",
    "pg": "^8.7.3",
    "redis": "^4.0.4",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "tsyringe": "^4.6.0",
    "typeorm": "^0.2.45",
    "winston": "^3.6.0",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/config": "^0.0.41",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-rate-limit": "^6.0.0",
    "@types/helmet": "^4.0.0",
    "@types/hpp": "^0.2.2",
    "@types/jsonwebtoken": "^8.5.7",
    "@types/lodash": "^4.14.178",
    "@types/module-alias": "^2.0.1",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^17.0.8",
    "@types/nodemon": "^1.19.1",
    "@types/source-map-support": "^0.5.4",
    "module-alias": "^2.2.2",
    "nodemon": "^2.0.15",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.5.4"
  }
}
